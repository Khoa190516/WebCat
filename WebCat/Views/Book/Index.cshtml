@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Index";
}
@model IEnumerable<Book>

<h1 class="text-center">Index - Book Store</h1><br/><br/>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-success">Books List</h2>
        </div>
        <div class="col-6">
            Create new Book
        </div>
    </div><br />

    @if (Model.Count() > 0) { 
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Book ID</th>
                    <th>Book Name</th>
                    <th>Author</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                <tr>
                    <td width="30%">@item.BookId</td>
                    <td width="30%">@item.BookName</td>
                    <td width="30%">@item.Author</td>
                    <td width="30%">@item.Price</td>
                </tr>
                }
            </tbody>
        </table>
    } else
            {
                <p>No Book Found</p>
            }

</div>


